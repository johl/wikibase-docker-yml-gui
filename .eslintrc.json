{
	"parser": "babel-eslint",
	"extends": [
		"wikimedia",
		"plugin:vue/essential"
	],
	"parserOptions": {
		"ecmaVersion": 2017
	},
	"env": {
		"browser": true,
		"commonjs": true
	},
	"rules": {
		"dot-notation": [ 2, { "allowKeywords": true } ],
		"no-use-before-define": 0,
		"no-var": 2,
		"prefer-const": 1,
		"prefer-template": 1,
		"one-var": 0,
		"max-len": [ 1, {
			"tabWidth": 2,
			"ignorePattern": "^// eslint-.+",
			"ignoreUrls": true,
			"ignoreComments": false,
			"ignoreRegExpLiterals": true,
			"ignoreStrings": true,
			"ignoreTemplateLiterals": true
		} ]
	}
}
