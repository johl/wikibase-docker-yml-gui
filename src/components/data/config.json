{
    "form": {
        "title":"Mockup",
        "subtitle": "",
        "nextButtonText": "blub_nextButton",
        "backButtonText": "blub_backButton",
        "finishButtonText" : "blub_finishButton",
        "stepSize": "md",
        "style": {
            "shape": "circle",
            "color": "#000000",
            "errorColor": "#f81717",
            "transition": "fade",
            "startIndex": 0
        }
    },
    "steps":[{
        "name":"blub_step1",
        "description": "blub_step1_description",
        "icon": "settings",
        "fields":[
            {
                "name": "blub_installLanguage",
                "type": "select",
                "default": "en",
                "required": true,
                "options": [
                    {"value": "en", "label":"blub_languageOption_english" },
                    {"value": "de", "label":"blub_languageOption_german" }
                ]
            },
            {
                "name": "blub_settingLanguage",
                "type": "select",
                "default": "en",
                "required": true,
                "options": [
                    {"value": "en", "label":"blub_languageOption_english" },
                    {"value": "de", "label":"blub_languageOption_german" }
                ]
            },
            {
                "name": "blub_downloadDefault",
                "type": "check",
                "default": false,
                "options": [
                    {"value": true, "label":"blub_choise_yes"},
                    {"value": false, "label":"blub_choise_no"}
                ],
                "required" : true
            },
            {
                "name": "blub_expertMode",
                "type": "check",
                "default": false,
                "options": [
                    {"value": true, "label":"blub_choise_yes"},
                    {"value": false, "label":"blub_choise_no"}
                ],
                "required": true
            },
            {
                "name": "blub_useModules",
                "type": "check",
                "bind": "getSteps",
                "evaluate": "checkUseModules"
            }],
        "advance":"",
        "template": ""
    }],
    "general":{}
}
