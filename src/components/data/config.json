{
    "name": "BlubberForm",
    "form":
    {
        "title":"title",
        "subtitle": "subtitle",
        "nextButtonText": "nextButton",
        "backButtonText": "backButton",
        "finishButtonText" : "finishButton",
        "stepSize": "xs",
        "shape": "tab",
        "color": "#3366cc",
        "errorColor": "#f81717",
        "transition": "fade",
        "startIndex": 0,
        "onChange": "vue.changeStep"
    },
    "steps":
    [
        {
            "name":"prolog",
            "description": "prolog_description",
            "icon": "settings",
            "options":
            {
                "validationErrorClass": "has-error",
                "validationSuccessClass": "has-success",
                "validateAfterChanged": true
            }
        },
        {
            "name": "components",
            "icon": "settings",
            "options":
            {
                "validationErrorClass": "has-error",
                "validationSuccessClass": "has-success",
                "validateAfterChanged": true
            },
            "fields":
            [
                {
                    "name": "components_question",
                    "type": "label"
                },
                {
                    "name": "elasticsearchStep",
                    "label": "components_elasticsearch",
                    "help": "components_elasticsearch_help",
                    "type": "choice",
                    "onChanged": "vue.refresh",
                    "default": true,
                    "values":
                    [
                      {"value": true, "label":"yes"},
                      {"value": false, "label":"no"}
                    ],
                    "required" : true
                },
                {
                    "name": "quickstatementsStep",
                    "label": "components_wikibaseQuickstatements",
                    "help": "components_wikibaseQuickstatements_help",
                    "type": "choice",
                    "onChanged": "vue.refresh",
                    "default": true,
                    "values":
                    [
                      { "value": true, "label": "yes" },
                      { "value": false, "label": "no" }
                    ],
                    "required" : true
                },
                {
                    "name": "wdqsStep",
                    "label": "components_wikibaseQueryService",
                    "help": "components_wikibaseQueryService_help",
                    "type": "choice",
                    "onChanged": "vue.refresh",
                    "default": true,
                    "values": [
                      { "value": true, "label": "yes" },
                      { "value": false, "label": "no" }
                    ],
                    "required" : true
                }
            ]
        },
        {
            "name": "componentsConfiguration",
            "icon": "settings",
            "renderCondition": "vue.hasComponents",
            "beforeChange": "vue.validateStep2",
            "options":
            {
                "validationErrorClass": "has-error",
                "validationSuccessClass": "has-success",
                "validateAfterChanged": true
            },
            "fields":
            [
                {
                    "name": "portsConfiguration",
                    "group":
                    [
                        {
                            "name": "wikibaseBlazegraphPort",
                            "type": "number",
                            "default": 9999,
                            "required": true,
                            "validator": "validator.port",
                            "renderCondition": "vue.hasWDQS"
                        },
                        {
                            "name": "wikibaseProxyPort",
                            "type": "number",
                            "default": 8989,
                            "required": true,
                            "validator": "validator.port",
                            "renderCondition": "vue.hasWDQS"
                        },
                        {
                            "name": "wikibaseFrontendPort",
                            "type": "number",
                            "default": 8282,
                            "required": true,
                            "validator": "validator.port",
                            "renderCondition": "vue.hasWDQS"
                        },
                        {
                            "name": "wikibaseQuickstatementsPort",
                            "type": "number",
                            "default": 9999,
                            "required": true,
                            "validator": "validator.port",
                            "renderCondition": "vue.hasQuickstatements"
                        }

                    ]
                },
                {
                    "name": "quickStatementsConfiguration",
                    "renderCondition": "vue.hasQuickstatements",
                    "group":
                    [
                        {
                            "name": "quickStatementsConfigurationOAuthConsumerKey",
                            "type": "text",
                            "briefDescription": "quickStatementsConfigurationConsumerKeyPlaceholder",
                            "required": true,
                            "validator": "validator.string"
                        },
                        {
                            "name": "quickStatementsConfigurationNamespaceProperty",
                            "type": "text",
                            "default": "122",
                            "required": true,
                            "validator": "validator.string"
                        },
                        {
                            "name": "quickStatementsConfigurationPrefixProperty",
                            "type": "text",
                            "default": "Property",
                            "required": true,
                            "validator": "validator.string"
                        },
                        {
                            "name": "quickStatementsConfigurationNamespaceItem",
                            "type": "text",
                            "default": "120",
                            "required": true,
                            "validator": "validator.string"
                        },
                        {
                            "name": "quickStatementsConfigurationPrefixItem",
                            "type": "text",
                            "default": "Item",
                            "required": true,
                            "validator": "validator.string"
                        }
                    ]
                }
            ]
        }
    ]
}
